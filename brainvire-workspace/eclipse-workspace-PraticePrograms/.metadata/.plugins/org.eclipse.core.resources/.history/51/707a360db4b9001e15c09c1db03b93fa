package Pratice_Programs;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

public class P73_Append_Text {

	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		String path = System.getProperty("/home/swapnil_limgude/brainvire-workspace/eclipse-workspace-PraticePrograms/Pratical_Programs/");
		String appendString = "I am 4th Line";
		try {
		FileWriter fw = new FileWriter(path,true);
		BufferedWriter bf = new BufferedWriter(fw);
		bf.write(appendString);
		fw.close();
		bf.close();
		}
		catch(Exception e) {
			System.out.println(e);
		}

	}

}
